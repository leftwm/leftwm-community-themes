[colors]  
; #000000 = Black-Solid
background = #000000
; #dfdfdf = Light Gray
foreground = #dfdfdf
;#99444444 = Black-light
background-alt = #99444444
; #FFFFFF = White
foreground-alt = #FFFFFF
; #ff0000 = Red-FireEngine

alert = #ff0000
green = #00fb94
red = #ff2332
blue = #2e5691
yellow = #ffd808
purple = #ff52f1
orange = #f77714

[bar/mainbar0]
inherit = bar/barbase
modules-left = workspace0

[module/workspace0]
type = custom/script
exec = leftwm-state -w 0 -t "$HOME"/.config/leftwm/themes/NeuroDune/template.liquid	
tail = true

[bar/mainbar1]
inherit = bar/barbase
modules-left = workspace1

[module/workspace1]
type = custom/script
exec = leftwm-state -w 1 -t "$HOME"/.config/leftwm/themes/NeuroDune/template.liquid
tail = true

;[bar/mainbar2]
;inherit = bar/barbase
;modules-left = workspace2

;[module/workspace2]
;type = custom/script
;exec = leftwm-state -w 2 -t $SCRIPTPATH/template.liquid
;tail = true

;[bar/mainbar3]
;inherit = bar/barbase
;modules-left = workspace3

;[module/workspace3]
;type = custom/script
;exec = leftwm-state -w 3 -t $SCRIPTPATH/template.liquid
;tail = true

[bar/barbase]
width = ${env:width}
offset-x = ${env:offsetx}
monitor = ${env:MONITOR:fallback-value}
offset-y = ${env:offsety}
;width = 100%
height = 25
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
border-size = 0
border-color = #00000000
padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 1
font-0 = Cascadia Code:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = wuncon siji:pixelsize=10;1
font-3 = FiraCode Nerd Font:style=Medium,Regular
modules-center = 
modules-right = sps2 memory cpu eth nordvpn firewall temperature battery pulseaudio fs sps2 date sps keys sps  
;tray-position = 
;tray-padding = 
cursor-click = pointer
cursor-scroll = ns-resize

[module/ewmh]
type = internal/xworkspaces
label-active = " %icon% %name%  "
label-active-foreground = ${colors.foreground-alt}
label-active-background = ${colors.background-alt}
label-active-underline = ${colors.primary}
label-occupied = " %icon% %name%  "
label-occupied-underline = ${colors.secondary}
label-urgent = " %icon% %name%  "
label-urgent-foreground = ${colors.foreground}
label-urgent-background = ${colors.background}
label-urgent-underline  = ${colors.alert}
label-empty = " %icon% %name%  "
label-empty-foreground = ${colors.foreground}


[module/xwindow] 
type = internal/xwindow
label = %title:0:30:...%
label-maxlen = 30

[module/sps]
type = custom/text
content = %{F#FFFFFF}|%{F-}

[module/sps2]
type = custom/text
content = %{F#0033cc}|%{F-} 

[module/keys]
type = custom/text
content = %{F#94b8b8}ï‚„ %{F-}
click-left = kitty sh -c "lolcat "$HOME"/.config/leftwm/themes/NeuroDune/scripts/keybindngs.txt; read -r" --hold

[module/fs]
type = custom/script
exec = $HOME/.config/leftwm/themes/NeuroDune/scripts/filesys_module
tail = true
format = <label>
label = %{F#0099cc}%output%%{F-}

;[module/filesystem]
;type = internal/fs
;interval = 300
;fixed-values = true
;mount-0 = /
;mount-1 = /home

;format-mounted = <label-mounted>
;label-mounted = %{F00e6e6}%mountpoint%%{F-}: %percentage_used%%
;label-mounted-foreground = ${colors.foreground-alt}
;format-unmounted = <label-unmounted>
;label-unmounted = %mountpoint% not mounted
;label-unmounted-foreground = ${colors.red}
;warn-percentage = 75
;label-warn = %{F#ff3300}%mountpoint%%{F-}: =>75% Full

[module/cpu]
type = internal/cpu
interval = 0.5  
format = <label>
label = %{T4}î˜ %{T-}%percentage%%
label-foreground = #a6f3ff
warn-percentage = 80
format-warn = <label-warn>
label-warn = %{F#ff3300}%CPU{T4}ï± %{T4-}%{F-} 

[module/memory]
type = internal/memory
interval = 0.5	
label = %{T4}ïŒŒ %{T-}%percentage_used%%
label-foreground = #99b3ff 

;[module/wlan]
;type = internal/network
;interface = wlo1
;interval = 3.0

;format-connected = <ramp-signal> <label-connected>
;format-connected-underline = #9f78e1
;label-connected = %essid%

;format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

;ramp-signal-0 = îˆ˜
;ramp-signal-1 = îˆ™
;ramp-signal-2 = îˆš
;ramp-signal-3 = îˆš
;ramp-signal-4 = îˆš
;ramp-signal-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = eno2
interval = 90
  
format-connected = <label-connected> 
label-connected = %{A1:nm-connection-editor:}%ifname%%{A}:%{T4}ï›¿ %{T-}
label-connected-foreground = #1aff1a

;format-connected-prefix = "ïƒ¨"
;label-connected = %local_ip%
;format-connected-prefix-foreground = ${colors.foreground-alt}

format-disconnected = <label-disconnected>
label-disconnected = %ifname%:%{T4}ï ˜ %{T-}
label-disconnected-foreground = ${colors.orange}

[module/nordvpn]
type = custom/script
exec = $HOME/.config/leftwm/themes/NeuroDune/scripts/vpn_module.sh 
interval = 20
format = <label>
label = %output%
label-foreground = #8af58a

[module/firewall]
type = custom/script
exec = $HOME/.config/leftwm/themes/NeuroDune/scripts/firewall_module.sh
interval = 240
format = <label>
label = %output%
label-foreground = #8cff66

[module/date]
type = internal/date
interval = 1.0
date = %D
time = %R
format = <label>
format-foreground = ${colors.foreground-alt}
label = %date% %time%
 
[module/pulseaudio]
type = internal/pulseaudio

format-volume =<label-volume>
label-volume = ï€¨  %percentage%%
label-volume-foreground = #ffb52a

label-muted = ğŸ”‡ muted
label-muted-foreground = #666

;bar-volume-width = 6
;bar-volume-foreground-0 = ${colors.purple}
;bar-volume-foreground-1 = ${colors.purple}
;bar-volume-foreground-2 = ${colors.purple}
;bar-volume-foreground-3 = ${colors.purple}
;bar-volume-foreground-4 = ${colors.purple}
;bar-volume-foreground-5 = ${colors.purple}
;bar-volume-foreground-6 = ${colors.purple}
;bar-volume-gradient = false
;bar-volume-indicator = |
;bar-volume-indicator-font = 2
;bar-volume-fill = â”€
;bar-volume-fill-font = 2
;bar-volume-empty = â”€
;bar-volume-empty-font = 2
;bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 97

format-charging = <animation-charging> <label-charging>
format-charging-foreground = #ff9999

format-discharging = <animation-discharging> <label-discharging>
format-discharging-foreground = #ff9999

format-full-prefix = %{F#ff3333}îˆº %{F-}
format-full-foreground = #ff9999

ramp-capacity-0 = îˆ¶
ramp-capacity-1 = îˆ·
ramp-capacity-2 = îˆ¸
ramp-capacity-foreground = #ff9999
animation-charging-0 = îˆ¶
animation-charging-1 = îˆ·
animation-charging-2 = îˆ¸
animation-charging-foreground = #ff9999
animation-charging-framerate = 750

animation-discharging-0 = îˆ¸
animation-discharging-1 = îˆ·
animation-discharging-2 = îˆ¶
animation-discharging-foreground = #ff9999 
animation-discharging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = %{F#ff6633}%{T4}îª%{T-}%{F-} <label>
format-warn = <label-warn>
label = %temperature-c%
label-foreground = #ff8c66
label-warn = %temperature-c%
label-warn-foreground = ${colors.red}

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = î„Œ
label-open-foreground = ${colors.secondary}
label-close = î¥ cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
pseudo-transparency = false

;[global/wm]
;margin-top = 5
;margin-bottom = 5

