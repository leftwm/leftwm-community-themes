[colors]
background = #eaffff
foreground = #111111
border = #87d7ff

[bar/leftwm]
width = ${env:WIDTH}
offset-x = ${env:OFFSETX}
offset-y = ${env:OFFSETY}
monitor = ${env:MONITOR}
background = ${colors.background}
foreground = ${colors.foreground}
border-size = 4
border-color = ${colors.border}
module-margin-right = 2
font-0 = Go:size=11:style=Bold;3
font-1 = Go:size=11:Bold:Italic;3
font-2 = Go Mono:size=12:style=Bold;3
font-3 = Font Awesome 6 Free Regular:size=12:style=Regular;3
font-4 = Font Awesome 6 Free Solid:size=12:style=Solid;3
modules-left = uname leftwm
modules-center = date
modules-right = volume cpu memory temperature weather
cursor-click = pointer
cursor-scroll = pointer

; Adjust max width of %output% as needed, depending on screen size
[module/leftwm]
type = custom/script
exec = leftwm-state -w $WSINDEX -t $SCRIPTPATH/template.liquid
tail = true
label = %output:0:450:...%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "%{T5} %{T-}"
format-padding = 1

; Memory module for OpenBSD
[module/memory]
type = custom/script
interval = 2
exec = ~/.config/leftwm/themes/current/scripts/mem.sh
format-prefix = %{T5} %{T-}
format-padding = 1

; Memory module for Linux
;[module/memory]
;type = internal/memory
;interval = 2
;label = %percentage_used%%
;format-prefix = %{T5} %{T-}
;format-padding = 1

; Volume info/control for sndio on OpenBSD
[module/volume]
type = custom/script
interval = 0.5
exec = ~/.config/leftwm/themes/current/scripts/vol.sh
format-prefix = %{T5} %{T-}
format-padding = 1
click-left = sndioctl -q output.mute=!
scroll-up = sndioctl -q output.level=+.01
scroll-down = sndioctl -q output.level=-.01

; Volume info/control for pulseaudio
;[module/volume]
;type = internal/pulseaudio
;interval = 1
;label-volume = %percentage%%
;format-volume = <ramp-volume> <label-volume>
;label-muted =  muted
;ramp-volume-0 = 
;ramp-volume-1 = 
;ramp-volume-2 = 
;format-padding = 1

[module/temperature]
type = internal/temperature
interval = 10
thermal-zone = 0
hwmon-path = ksmn0
format-prefix = %{T5} %{T-}
format-padding = 1

; if location detection isn't working see https://github.com/chubin/wttr.in
; for instructions on setting location manually
[module/weather]
type = custom/script
interval = 600
exec = curl --silent https://wttr.in/cmh?format='%C+%c+%f\n'
format-prefix = %{T5} %{T-}
format-padding = 1
format-suffix = " "

[module/date]
type = internal/date
date =
date-alt = " - %A %B %d %Y"
time = %H:%M
time-alt = %H:%M:%S
label = %time% %date%

[module/uname]
type = custom/script
interval = 36000
exec = uname -rs
label = %{T2} %output%%{T-}  -

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

